<center>
    <div class="card" style="margin-top: 1em;margin-left: 3em;margin-right: 3em;">
        <div class="card">
            <div class="card-header">
                USUARIOS REGISTRADOS
            </div>
            <div class="card-body" style="text-align: center;">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">BOLETA/MATRÍCULA</th>
                            <th scope="col">NOMBRE</th>
                            <th scope="col">STATUS</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each consulta}}
                        <tr>
                            <td>{{this.usr_mb}}</td>
                            <td>{{this.reg_nom}} {{this.reg_pri}} {{this.reg_seg}}</td>
                            <td>{{#if this.statuss}}ACTIVO{{else}}INACTIVO{{/if}}</td>

                            <td>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-info" href="/ver/datos/usuario/?s={{this.usr_mb}}">VER</a>
                                    <a class="btn btn-primary" href="/editar/usuario/?s={{this.usr_mb}}">EDITAR</a>
                                </div>   
                            </td>

                            <td>
                                <div class="btn-group" role="group">
                                    

                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                        data-target="#exampleModal{{this.usr_mb}}">
                                        ELIMINAR
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal{{this.usr_mb}}" tabindex="-1" role="dialog"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">ALERTA</h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    ESTÁ A PUNTO DE ELIMINAR
                                                    UN USUARIO DEL SISTEMA ¿DESEA CONTINUAR CON DICHA ACCIÓN?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">CANCELAR</button>
                                                    <form action="/eliminar/usuario" method="POST">
                                                        <input type="hidden" value="{{this.usr_mb}}" name="mb">
                                                        <button type="submit"
                                                            class="btn btn-danger btn">ELIMINAR</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</center>